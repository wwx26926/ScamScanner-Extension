{
  "manifest_version": 3,
  "name": "ScamScanner",
  "version": "1.0",
  "description": "Wtyczka do weryfikacji fake news√≥w",
  "permissions": ["activeTab","storage","scripting"],
  "host_permissions": ["http://*/*","https://*/*"],
  "background": { "service_worker": "background.js" },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "content_scripts": [
    {
      "matches": ["http://*/*","https://*/*"],
      "js": ["content.js"],
      "css": ["inject.css"],
      "run_at": "document_idle"
    }
  ]
}
